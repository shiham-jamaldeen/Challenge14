<div class="container">
        <div class="row" style="padding-top: 25px">
    {{#each getAllPostsForUser as |blogPost|}}        
          <div
            class="col-md-8"
            style="
              background-color: burlywood;
              border: 2px;
              border-style: dashed;
              border-radius: 5px;
              padding: 10px;
            "
          >
            <h4><a href="/post/{{{blogPost.id}}}">{{{blogPost.post_title}}}</a></h4>
        </div>
        <div
            class="col-md-4"
            style="
              background-color: burlywood;
              border: 2px;
              border-style: dashed;
              border-radius: 5px;
              padding: 10px;
              text-align: right;
            "
          >
            <h6>Created: {{{blogPost.date_created}}} <span>&nbsp;</span> Author: {{{blogPost.user.name}}}</h6>
          </div>
         
          <div><span>&nbsp;</span></div>
          {{/each}} 
        </div>
        <div class="col-lg-12" style="padding: 10px; color:bisque">
              <button type="button" class="btn btn-secondary btn-lg" data-toggle="modal" data-target="#exampleModal">New Post</button>>New Post</button>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <input type="text" class="form-control" id="blogPostTitle" placeholder="Enter title of the blog post">
         <p>&nbsp;</p>
          <textarea class="form-control" id="blogPostText" placeholder="Enter text" rows="3"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="newPostButton">Save</button>
      </div>
    </div>
  </div>
</div>
</div>
