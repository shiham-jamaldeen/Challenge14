  <div class="container">
        <div class="row" style="padding-top: 25px">
          <div
            class="col-md-6"
            style="
              background-color: burlywood;
              border: 2px;
              border-style: dashed;
              border-radius: 5px;
              padding: 10px;
              text-align:left;
            "
          >
            <h4>{{{individualBlogPost.post_title}}}</h4>
          </div>
          <div
            class="col-md-4"
            style="
              background-color: burlywood;
              border: 2px;
              border-style: dashed;
              border-radius: 5px;
              padding: 10px;
              text-align: right;
            "
          >
            <h6>Date created: {{{individualBlogPost.date_created}}}</h6>
          </div>
          <div
            class="col-md-2"
            style="
              background-color: burlywood;
              border: 2px;
              border-style: dashed;
              border-radius: 5px;
              padding: 10px;
              text-align: right;
            "
          >
          <i class='fas fa-edit' style='font-size:24px;color:red' data-target="#editModal" data-toggle="modal"></i>
          <span>&nbsp;</span>
         <i class='fas fa-trash-alt no-button-icon' style='font-size:24px;color:red' id="deleteIcon"></i>
          </div>
          <div
            style="
              background-color: burlywood;
              border: 2px;
              border-style: dashed;
              border-radius: 5px;
              padding: 10px;
            "
          >
            <h6>{{{individualBlogPost.post_content}}}</h6>
          </div>
          <div><span>&nbsp;</span></div>
          <div
            style="
              background-color: burlywood;
              border: 2px;
              border-style: dashed;
              border-radius: 5px;
              padding: 10px;
            ">
            <h5>Comments</h5>
          {{#each commentForBlogPosts as |comment|}}
            <p>{{{comment.comment}}} <span>&nbsp;</span>{{{comment.date_created}}}</p>
            {{/each}}
          </div>
          <div><span>&nbsp;</span></div>
          <div
            style="
              background-color: burlywood;
              border: 2px;
              border-style: dashed;
              border-radius: 5px;
              padding: 10px;
            ">
            <h5>New Comment</h5>
             <div class="form-group">
             <textarea class="form-control" id="newCommentTextArea" rows="3"></textarea>
             <span>&nbsp;</span>
             <button type="button" class="btn btn-secondary btn-lg" id="comment-button">Submit</button>
            </div>
          </div>
         
        </div>
      </div>
      <!--edit modal-->
      <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Blog Post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <textarea class="form-control" id="editBlogPostTitle" rows="1">{{{individualBlogPost.post_title}}}</textarea>
         <p>&nbsp;</p>
          <textarea class="form-control" id="editBlogPostText" rows="5">{{{individualBlogPost.post_content}}}</textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="editBlogPost">Update Post</button>
      </div>
    </div>
  </div>
</div>
<!--icons and modal JS scripts-->
